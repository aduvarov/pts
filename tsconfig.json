{
    // Visit https://aka.ms/tsconfig to read more about this file
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        //
        /* Emit */
        "outDir": "./build",
        "removeComments": false,
        "noEmit": false, // проверить но не эмитить
        "noEmitOnError": true, // не эмитить при ошибках
        "declaration": true,
        "composite": true,
        "declarationDir": "./types/",

        //
        "rootDir": "./src/"
    }
}
